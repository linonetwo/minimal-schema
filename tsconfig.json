{
    "compilerOptions": {
      "target": "es6",
      "module": "esnext",
      "moduleResolution": "node",
      "lib": ["dom", "es2018"],
      "declaration": true,
      "declarationDir": "lib/types",
      "sourceMap": true,
      "outDir": "./lib/esm",
      "strict": true,
      "strictPropertyInitialization": false,
      "types": ["mocha", "node", "chai"],
      "inlineSources": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
    },
    "include": ["src/", "declarations/"],
}
