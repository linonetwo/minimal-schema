{
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "moduleResolution": "node",
      "lib": ["dom", "es2018"],
      "declaration": true,
      "sourceMap": true,
      "outDir": "./lib",
      "strict": true,
      "strictPropertyInitialization": false,
      "types": ["mocha", "node", "chai"],
      "inlineSources": true,
      "experimentalDecorators": true,
      "resolveJsonModule": true,
      "esModuleInterop": true
    }
  }
